<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="@string/app_name"
        android:fontFamily="serif-monospace"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/bold_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/inj"
        android:layout_width="150dp"
        android:layout_height="102dp"
        android:layout_marginBottom="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/injection" />

    <ImageView
        android:id="@+id/pist"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/inj"
        app:layout_constraintEnd_toEndOf="@+id/inj"
        app:srcCompat="@drawable/piston" />

    <ImageView
        android:id="@+id/drop"
        android:layout_width="57dp"
        android:layout_height="54dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="@+id/inj"
        app:layout_constraintTop_toBottomOf="@+id/inj"
        app:srcCompat="@drawable/drop" />
</androidx.constraintlayout.widget.ConstraintLayout>